<div class="max-w-8xl mx-auto space-y-8">

  <!-- Stats Overview Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    
    <!-- NPID Status Stats -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center">
          <i class="fas fa-user-shield text-blue-600 text-xl"></i>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-800">NPID Status</h3>
          <p class="text-gray-600 text-sm">National Patient Identifier Statistics</p>
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-green-50 rounded-lg p-4 border border-green-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-600 text-sm font-medium">Active NPIDs</p>
              <p class="text-2xl font-bold text-green-800" id="active-npids">-</p>
            </div>
            <i class="fas fa-check-circle text-green-500 text-2xl"></i>
          </div>
        </div>
        
        <div class="bg-yellow-50 rounded-lg p-4 border border-yellow-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-yellow-600 text-sm font-medium">Pending</p>
              <p class="text-2xl font-bold text-yellow-800" id="pending-npids">-</p>
            </div>
            <i class="fas fa-clock text-yellow-500 text-2xl"></i>
          </div>
        </div>
        
        <div class="bg-red-50 rounded-lg p-4 border border-red-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-red-600 text-sm font-medium">Failed</p>
              <p class="text-2xl font-bold text-red-800" id="failed-npids">-</p>
            </div>
            <i class="fas fa-exclamation-triangle text-red-500 text-2xl"></i>
          </div>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-600 text-sm font-medium">Total</p>
              <p class="text-2xl font-bold text-blue-800" id="total-npids">-</p>
            </div>
            <i class="fas fa-database text-blue-500 text-2xl"></i>
          </div>
        </div>
      </div>
      
      <div class="mt-4 text-xs text-gray-500 flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
        Last updated: <span id="npid-last-update">--:--</span>
      </div>
    </div>

    <!-- Sync Status Stats -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-12 h-12 bg-purple-50 rounded-xl flex items-center justify-center">
          <i class="fas fa-sync-alt text-purple-600 text-xl"></i>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-800">Sync Status</h3>
          <p class="text-gray-600 text-sm">Data Synchronization Statistics</p>
        </div>
      </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-green-50 rounded-lg p-4 border border-green-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-600 text-sm font-medium">Successful</p>
              <p class="text-2xl font-bold text-green-800" id="sync-success">-</p>
            </div>
            <i class="fas fa-check-double text-green-500 text-2xl"></i>
          </div>
        </div>
        
        <div class="bg-orange-50 rounded-lg p-4 border border-orange-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-orange-600 text-sm font-medium">In Progress</p>
              <p class="text-2xl font-bold text-orange-800" id="sync-progress">-</p>
            </div>
            <i class="fas fa-spinner fa-spin text-orange-500 text-2xl"></i>
          </div>
        </div>
        
        <div class="bg-red-50 rounded-lg p-4 border border-red-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-red-600 text-sm font-medium">Errors</p>
              <p class="text-2xl font-bold text-red-800" id="sync-errors">-</p>
            </div>
            <i class="fas fa-times-circle text-red-500 text-2xl"></i>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-gray-600 text-sm font-medium">Queue</p>
              <p class="text-2xl font-bold text-gray-800" id="sync-queue">-</p>
            </div>
            <i class="fas fa-list text-gray-500 text-2xl"></i>
          </div>
        </div>
      </div>
      
      <div class="mt-4 text-xs text-gray-500 flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-purple-500 animate-pulse"></div>
        Last sync: <span id="sync-last-update">--:--</span>
      </div>
    </div>
  </div>

  <!-- Service Control Panel and Quick Access Row -->
  <div class="grid grid-cols-1 xl:grid-cols-4 gap-6">
    
    <!-- Service Control Panel (takes up 3/4 width on desktop) -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 space-y-6 xl:col-span-3">
      <h2 class="text-2xl font-bold text-gray-800 border-b pb-4 flex items-center justify-between">
        <span class="flex items-center gap-2">
          <i class="fas fa-cogs text-gray-700 text-2xl"></i>
          Service Control Panel
        </span>
        <div id="service-loader" class="w-6 h-6 border-4 border-blue-500 border-t-transparent border-solid rounded-full animate-spin hidden"></div>
      </h2>

      <div id="service-result-container" class="mt-4"></div>

      <% if @result.present? && params[:context] == "services" %>
        <div class="p-4 rounded-lg border 
          <%= @result.downcase.include?("error") ? "bg-red-50 border-red-300 text-red-700" : "bg-green-50 border-green-300 text-green-700" %>">
          <strong>Result:</strong> <%= @result %>
        </div>
      <% end %>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @services.each do |service| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-700 flex items-center gap-2">
                  <i class="fas fa-server text-gray-500"></i>
                  <%= service %>
                </td>

                <td class="px-6 py-4 whitespace-nowrap">
                  <% status = @service_status[service] %>
                  <% if status == "running" %>
                    <span class="flex items-center gap-2 text-green-600 font-medium">
                      <span class="w-2 h-2 rounded-full bg-green-500"></span>
                      Running
                    </span>
                  <% elsif status == "stopped" %>
                    <span class="flex items-center gap-2 text-red-600 font-medium">
                      <span class="w-2 h-2 rounded-full bg-red-500"></span>
                      Not Running
                    </span>
                  <% else %>
                    <span class="flex items-center gap-2 text-gray-500 font-medium">
                      <span class="w-2 h-2 rounded-full bg-gray-400"></span>
                      Unknown
                    </span>
                  <% end %>
                </td>

                <td class="px-6 py-4 whitespace-nowrap space-x-2">
                  <% @actions.each do |action| %>
                    <%= form_with url: manage_services_path, method: :post, remote: true, class: "inline-block service-form" do |f| %>
                      <%= hidden_field_tag :service, service %>
                      <%= hidden_field_tag :action_name, action %>
                      <%= hidden_field_tag :context, "services" %>

                      <% icon_class = case action.downcase
                        when "start" then "fas fa-play text-green-500"
                        when "stop" then "fas fa-stop text-red-500"
                        when "restart" then "fas fa-redo text-yellow-500"
                        when "status" then "fas fa-info-circle text-blue-500"
                        else "fas fa-question-circle text-gray-400"
                      end %>

                      <%= button_tag type: "submit", class: "bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-semibold px-5 py-2 rounded-lg shadow transition transform hover:-translate-y-0.5 inline-flex items-center gap-2" do %>
                        <i class="<%= icon_class %>"></i>
                        <span><%= action.capitalize %></span>
                      <% end %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Quick Access Panel (takes up 1/4 width on desktop) -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 xl:col-span-1">
      <h2 class="text-xl font-semibold text-gray-800 border-b pb-3 mb-6">Quick Access</h2>
      
      <div class="space-y-4">
        <!-- Dashboard -->
        <%= link_to "https://ddedashboard.hismalawi.org", target: "_blank", class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-600 hover:text-white transition-all duration-200 hover:translate-x-1 bg-gray-100" do %>
          <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#127970;</span>
          <div class="flex-1 min-w-0">
            <span class="sidebar-text font-medium text-sm block truncate">DDE Master Dashboard</span>
          </div>
          <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">→</span>
        <% end %>

        <!-- Sidekiq -->
        <%= link_to "/v1/sidekiq", target: "_blank", class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-green-600 hover:text-white transition-all duration-200 hover:translate-x-1 bg-gray-100" do %>
          <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#9881;</span>
          <div class="flex-1 min-w-0">
            <span class="sidebar-text font-medium text-sm block truncate">Proxy Sidekiq</span>
          </div>
          <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">→</span>
        <% end %>

        <!-- Swagger Docs -->
        <%= link_to "/api-docs", target: "_blank", class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-purple-600 hover:text-white transition-all duration-200 hover:translate-x-1 bg-gray-100" do %>
          <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#128196;</span>
          <div class="flex-1 min-w-0">
            <span class="sidebar-text font-medium text-sm block truncate">API Swagger Docs</span>
          </div>
          <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-200">→</span>
        <% end %>
      </div>
    </div>

  </div>

  <!-- System Diagnostics -->
  <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 space-y-6">
    <div class="flex items-center gap-3 mb-6">
      <div class="w-10 h-10 bg-red-50 rounded-lg flex items-center justify-center">
        <span class="text-red-600 text-xl">⚠</span>
      </div>
      <div>
        <h3 class="text-2xl font-bold text-gray-800">System Diagnostics</h3>
        <p class="text-gray-600 text-sm">Select any diagnosis and begin troubleshooting</p>
      </div>
    </div>

    <%= form_with url: troubleshoot_path, method: :post, remote: true, id: "troubleshoot_form", class: "space-y-6" do |form| %>
      <% error_options = {
        'Diagnoses' => {
          'resolve_sync_configs' => 'Resolve Sync Configs',
          'detect_footprint_conflicts' => 'Detect Footprint Conflicts',
          'resolve_program_users_configs' => 'Resolve Program Users Configs'
        }
      } %>

      <% error_options.each do |category, errors| %>
        <div>
          <h4 class="text-gray-800 font-medium mb-3"><%= category %></h4>
          <div class="grid gap-3 md:grid-cols-2">
            <% errors.each do |key, label| %>
              <label for="<%= key %>" 
                     class="error-option block p-4 border rounded-xl cursor-pointer transition hover:border-blue-400 hover:shadow-sm">
                <div class="flex items-center gap-3">
                  <%= form.radio_button :error_type, key, id: key, class: "hidden peer" %>
                  <div class="w-5 h-5 border border-gray-400 rounded-full flex items-center justify-center peer-checked:border-blue-600 peer-checked:bg-blue-600">
                    <div class="w-2 h-2 bg-white rounded-full hidden peer-checked:block"></div>
                  </div>
                  <span class="text-gray-700 font-medium"><%= label %></span>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
        <%= form.submit "Start Troubleshooting", 
              class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium shadow-sm disabled:opacity-50 disabled:cursor-not-allowed", 
              id: "troubleshoot_btn", disabled: true %>

        <button type="button" id="clear_selection" 
          class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-6 py-2 rounded-lg font-medium shadow-sm">
          Clear Selection
        </button>

        <div class="flex items-center gap-2 text-sm text-gray-500 ml-auto">
          <div class="w-2 h-2 rounded-full bg-gray-400" id="status_indicator"></div>
          <span id="status_text">Select an error type to begin</span>
        </div>
      </div>
    <% end %>

    <div class="bg-white rounded-xl shadow-md border border-gray-200 p-6 space-y-6">
      <h3 class="text-xl font-semibold text-gray-800 mb-2">Output</h3>

      <% if @result.present? && params[:context] == "diagnostics" %>
        <% result_class = @result_status.to_s == "error" ? "bg-red-50 border-red-300 text-red-700" : "bg-green-50 border-green-300 text-green-700" %>
        <div class="p-4 rounded-lg border <%= result_class %> shadow-sm">
          <strong class="block mb-1">Result:</strong>
          <span class="whitespace-pre-line"><%= @result %></span>
        </div>

        <% if @result_status.to_s == "auth_failed" %>
          <%= render "reset_sync_form" %>
        <% elsif @result.to_s.include?("foot_prints belonging to more than") %>
          <%= render "reset_location_form" %>
        <% end %>
      <% else %>
        <p class="text-gray-500 italic">No result available.</p>
      <% end %>
    </div>
  </div>
</div>

<!-- Scripts -->
<script>
document.addEventListener("DOMContentLoaded", () => {
  // ===== Service Control Panel Loader & Result =====
  const serviceLoader = document.getElementById("service-loader");
  const serviceResultContainer = document.getElementById("service-result-container");

  document.querySelectorAll(".service-form").forEach(form => {
    form.addEventListener("submit", () => {
      serviceLoader.classList.remove("hidden");
      serviceResultContainer.innerHTML = ""; // Clear previous result
    });
  });

  document.addEventListener("ajax:success", (event) => {
    const [data, status, xhr] = event.detail;

    if (data && data.result) {
      const isError = data.status === "error";
      serviceResultContainer.innerHTML = `
        <div class="p-4 rounded-lg border ${isError ? 'bg-red-50 border-red-300 text-red-700' : 'bg-green-50 border-green-300 text-green-700'} shadow-sm">
          <strong>Result:</strong> <span class="whitespace-pre-line">${data.result}</span>
        </div>
      `;
    }

    serviceLoader.classList.add("hidden");
  });

  document.addEventListener("ajax:error", () => {
    serviceResultContainer.innerHTML = `
      <div class="p-4 rounded-lg border bg-red-50 border-red-300 text-red-700 shadow-sm">
        <strong>Error:</strong> Could not process the request.
      </div>
    `;
    serviceLoader.classList.add("hidden");
  });

  // ===== Diagnostics Scripts =====
  const radioButtons = document.querySelectorAll('input[type="radio"]');
  const troubleshootBtn = document.getElementById('troubleshoot_btn');
  const clearBtn = document.getElementById('clear_selection');
  const statusText = document.getElementById('status_text');
  const statusIndicator = document.getElementById('status_indicator');
  const outputContainer = document.querySelector('.bg-white.rounded-xl.shadow-md');

  radioButtons.forEach(radio => {
    radio.addEventListener('change', () => {
      troubleshootBtn.disabled = false;
    });
  });

  clearBtn.addEventListener('click', () => {
    radioButtons.forEach(r => r.checked = false);
    troubleshootBtn.disabled = true;
    statusText.textContent = "Select an error type to begin";
    statusIndicator.className = "w-2 h-2 rounded-full bg-gray-400";
    if (outputContainer) {
      outputContainer.innerHTML = `
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Output</h3>
        <p class="text-gray-500 italic">No result available.</p>
      `;
    }
  });

  // ===== Stats Update Functions =====
  function updateNPIDStats() {
    // Example: Fetch NPID stats from backend
    // fetch('/npid_stats')
    //   .then(response => response.json())
    //   .then(data => {
    //     document.getElementById('active-npids').textContent = data.active;
    //     document.getElementById('pending-npids').textContent = data.pending;
    //     document.getElementById('failed-npids').textContent = data.failed;
    //     document.getElementById('total-npids').textContent = data.total;
    //     document.getElementById('npid-last-update').textContent = new Date().toLocaleTimeString();
    //   });
  }

  function updateSyncStats() {
    // Example: Fetch sync stats from backend
    // fetch('/sync_stats')
    //   .then(response => response.json())
    //   .then(data => {
    //     document.getElementById('sync-success').textContent = data.success;
    //     document.getElementById('sync-progress').textContent = data.progress;
    //     document.getElementById('sync-errors').textContent = data.errors;
    //     document.getElementById('sync-queue').textContent = data.queue;
    //     document.getElementById('sync-last-update').textContent = new Date().toLocaleTimeString();
    //   });
  }

  // Initialize stats and periodic updates
  updateNPIDStats();
  updateSyncStats();
  setInterval(() => {
    updateNPIDStats();
    updateSyncStats();
  }, 30000);

  // ===== Service Panel Header Loader =====
  const cardLoader = document.getElementById("card-header-loader");
  document.querySelectorAll(".service-form").forEach(form => {
    form.addEventListener("submit", () => {
      cardLoader.classList.remove("hidden");
    });
  });
  document.addEventListener("ajax:complete", () => {
    cardLoader.classList.add("hidden");
  });

});
</script>