<div class="max-w-8xl mx-auto p-6">
  <div class="bg-white rounded-2xl shadow-lg p-6 space-y-6">
    <h2 class="text-2xl font-bold text-gray-800 border-b pb-4 flex items-center gap-2">
      <i class="fas fa-cogs text-gray-700 text-2xl"></i>
      Service Control Panel
    </h2>

    <% if @result.present? %>
      <div class="p-4 rounded-lg border 
        <%= @result.downcase.include?("error") ? "bg-red-50 border-red-300 text-red-700" : "bg-green-50 border-green-300 text-green-700" %>">
        <strong>Result:</strong> <%= @result %>
      </div>
    <% end %>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @services.each do |service| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-700 flex items-center gap-2">
                <i class="fas fa-server text-gray-500"></i>
                <%= service %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap space-x-2">
                <% @actions.each do |action| %>
                  <%= form_with url: manage_services_path, method: :post, local: true, class: "inline-block" do |f| %>
                    <%= hidden_field_tag :service, service %>
                    <%= hidden_field_tag :action_name, action %>

                    <%# Map actions to FontAwesome icons and colors %>
                    <% case action.downcase %>
                    <% when "start" %>
                      <% icon_class = "fas fa-play text-green-500" %>
                    <% when "stop" %>
                      <% icon_class = "fas fa-stop text-red-500" %>
                    <% when "restart" %>
                      <% icon_class = "fas fa-redo text-yellow-500" %>
                    <% when "status" %>
                      <% icon_class = "fas fa-info-circle text-blue-500" %>
                    <% else %>
                      <% icon_class = "fas fa-question-circle text-gray-400" %>
                    <% end %>

                    <%= button_tag type: "submit", class: "bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-semibold px-5 py-2 rounded-lg shadow transition transform hover:-translate-y-0.5 inline-flex items-center gap-2" do %>
                      <i class="<%= icon_class %>"></i>
                      <span><%= action.capitalize %></span>
                    <% end %>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>