<div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
  <div class="flex items-center gap-3 mb-6">
    <div class="w-12 h-12 bg-purple-50 rounded-xl flex items-center justify-center">
      <i class="fas fa-sync-alt text-purple-600 text-xl"></i>
    </div>
    <div>
      <h3 class="text-xl font-bold text-gray-800">Sync Status</h3>
      <p class="text-gray-600 text-sm">Data Synchronization Statistics</p>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <%= render "stat_card", label: "Successful", id: "sync-success", color: "green", icon: "fas fa-check-double" %>
    <%= render "stat_card", label: "In Progress", id: "sync-progress", color: "orange", icon: "fas fa-spinner fa-spin" %>
    <%= render "stat_card", label: "Errors", id: "sync-errors", color: "red", icon: "fas fa-times-circle" %>
    <%= render "stat_card", label: "Queue", id: "sync-queue", color: "gray", icon: "fas fa-list" %>
  </div>

  <div class="mt-4 text-xs text-gray-500 flex items-center gap-2">
    <div class="w-2 h-2 rounded-full bg-purple-500 animate-pulse"></div>
    Last sync: <span id="sync-last-update">--:--</span>
  </div>
</div>