<div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
  <div class="flex items-center gap-3 mb-6">
    <div class="w-12 h-12 bg-purple-50 rounded-xl flex items-center justify-center">
      <i class="fas fa-sync-alt text-purple-600 text-xl"></i>
    </div>
    <div>
      <h3 class="text-xl font-bold text-gray-800">Sync Status</h3>
      <p class="text-gray-600 text-sm">Data Synchronization Statistics</p>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <%= render "stat_card", label: "Total Footprints", id: "total-footprints", color: "green", icon: "fas fa-shoe-prints", count: 120 %>
    <%= render "stat_card", label: "Synced Footprints", id: "synced_footprints", color: "green", icon: "fas fa-check-double", count: 95 %>
    <%= render "stat_card", label: "Unsynced Footprints", id: "unsynced_footprints", color: "orange", icon: "fas fa-exclamation-circle", count: 25 %>

    <%= render "stat_card", label: "Test Sync", id: "test_sync", color: "orange", icon: "fas fa-sync-alt" do %>
      <button 
        id="btn-test-sync" 
        class="px-4 py-2 bg-green-600 text-white rounded-xl hover:bg-green-700 transition duration-200"
      >
        <i class="fas fa-sync-alt mr-2"></i>Run Sync
      </button>
    <% end %>
  </div>
  

  <div class="mt-4 text-xs text-gray-500 flex items-center gap-2">
    <div class="w-2 h-2 rounded-full bg-purple-500 animate-pulse"></div>
    Last sync: <span id="sync-last-update">--:--</span>
  </div>
</div>