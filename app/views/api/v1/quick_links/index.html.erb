
<div class="max-w-8xl mx-auto p-6">
  <div class="bg-white rounded-2xl shadow-lg p-6 space-y-6">
    <h2 class="text-xl font-semibold text-gray-800 border-b pb-3">Service Control Panel</h2>

    <div class="container mx-auto p-6">
      <ul class="space-y-3">
        <!-- Dashboard -->
        <li>
          <%= link_to "https://ddedashboard.hismalawi.org", target: "_blank", class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-600 hover:text-white transition-all duration-200 hover:translate-x-1 bg-gray-100" do %>
            <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#127970;</span>
            <span class="sidebar-text font-medium">DDE Master Dashboard</span>
            <span class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-200">→</span>
          <% end %>
        </li>

        <!-- Sidekiq -->
        <li>
          <%= link_to "/v1/sidekiq", target: "_blank", class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-green-600 hover:text-white transition-all duration-200 hover:translate-x-1 bg-gray-100" do %>
            <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#9881;</span>
            <span class="sidebar-text font-medium">Proxy Sidekiq</span>
            <span class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-200">→</span>
          <% end %>
        </li>

        <!-- Swagger Docs -->
        <li>
          <%= link_to "/api-docs", target: "_blank", class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-purple-600 hover:text-white transition-all duration-200 hover:translate-x-1 bg-gray-100" do %>
            <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#128196;</span>
            <span class="sidebar-text font-medium">API Swagger Docs</span>
            <span class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-200">→</span>
          <% end %>
        </li>
      </ul>
    </div>

  </div>
</div>
