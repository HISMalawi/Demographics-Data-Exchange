<div class="mt-4 p-4 bg-yellow-50 border border-yellow-300 rounded-lg shadow-sm space-y-3">
  <p class="text-yellow-700"><%= @result %></p>

  <%= form_with url: reset_sync_credentials_path, method: :post, local: false, id: "reset_sync_form", class: "space-y-3" do |f| %>
    <div>
      <%= f.label :username, "Sync Username", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :username, class: "block w-full border border-gray-300 rounded-lg px-3 py-2" %>
    </div>
    <div>
      <%= f.label :password, "Sync Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "block w-full border border-gray-300 rounded-lg px-3 py-2" %>
    </div>
    <div>
      <%= f.label :location_id, "Location ID", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :location_id, class: "block w-full border border-gray-300 rounded-lg px-3 py-2" %>
    </div>

    <%= f.submit "Reset / Update Sync Credentials", class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium shadow-sm" %>
  <% end %>

  <div id="reset_status" class="text-sm mt-2"></div>
</div>