      'session_timeout': 'Session Timeout',
      'permission_denied': 'Permission Denied',
      'slow_queries': 'Slow Database Queries',
      'high_cpu': 'High CPU Usage',
      'cache_issues': 'Cache Problems'
    };
    
    return labels[errorType] || errorType;
  }

