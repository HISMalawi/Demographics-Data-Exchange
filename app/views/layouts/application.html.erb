<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <title>DDE</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- FontAwesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
</head>
<!-- ðŸ‘‡ Start collapsed by default -->
<body class="bg-gray-100 text-gray-700 min-h-screen flex flex-col sidebar-collapsed">

  <!-- Fixed top header bar -->
  <header class="fixed top-0 left-0 right-0 bg-gray-50/95 backdrop-blur-md border-b border-gray-200/50 h-16 flex items-center justify-between px-6 z-50 shadow-sm transition-all duration-300">
    <div class="flex items-center gap-4">
      <button id="hamburgerBtn" aria-label="Toggle sidebar" class="text-gray-600 hover:text-gray-900 focus:outline-none text-xl transition-all duration-200 hover:scale-110 active:scale-95">
        <span class="block w-6 h-0.5 bg-current mb-1.5 transition-all duration-300 hamburger-line-1"></span>
        <span class="block w-6 h-0.5 bg-current mb-1.5 transition-all duration-300 hamburger-line-2"></span>
        <span class="block w-6 h-0.5 bg-current transition-all duration-300 hamburger-line-3"></span>
      </button>
      <h1 class="text-xl font-bold text-gray-800 tracking-tight">Demographics Data Exchange</h1>
    </div>
    <div class="flex items-center gap-2 text-sm text-gray-600">
      <i class="fab fa-git-alt text-gray-500"></i>
      <span class="hidden sm:inline">Version <%= git_version %></span>
    </div>
  </header>

  <div class="flex flex-1 pt-16 pb-12">

    <!-- Fixed Sidebar (collapsed default) -->
    <aside id="sidebar" class="fixed left-0 top-16 bottom-12 bg-gray-800 text-gray-200 flex flex-col transition-all duration-300 w-16 shadow-lg z-40 border-r border-gray-700/50">
      
      <!-- Sidebar content -->
      <nav class="flex-1 px-3 py-6 space-y-1 overflow-y-auto scrollbar-thin scrollbar-thumb-gray-600 scrollbar-track-transparent">
        <ul class="space-y-1">
          <li>
            <%= link_to api_v1_services_path, class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-700 hover:text-white transition-all duration-200 hover:translate-x-1" do %>
              <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#9881;</span>
              <span class="sidebar-text font-medium hidden">Service Control</span>
              <span class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-200">â†’</span>
            <% end %>
          </li>
          <li>
            <%= link_to documentation_path, class: "nav-link group flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-700 hover:text-white transition-all duration-200 hover:translate-x-1" do %>
              <span class="text-lg transition-transform duration-200 group-hover:scale-110">&#128187;</span>
              <span class="sidebar-text font-medium hidden">Documentation</span>
              <span class="ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-200">â†’</span>
            <% end %>
          </li>
        </ul>
      </nav>
    
    </aside>

    <!-- Main content area (shifted less when collapsed) -->
    <main id="mainContent" class="flex-1 flex flex-col bg-white/50 backdrop-blur-sm ml-16 transition-all duration-300 min-h-0">
      <div class="flex-1 flex flex-col p-8">
        <section class="flex-1 min-h-0">
          <div class="h-full overflow-auto scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-transparent pr-2">
            <%= yield %>
          </div>
        </section>
      </div>
    </main>
  </div>

  <!-- Footer -->
  <footer class="fixed bottom-0 left-0 right-0 bg-white/90 backdrop-blur-md border-t border-gray-200/50 text-gray-500 text-xs h-12 flex items-center justify-between px-6 z-50 shadow-sm">
    <span class="flex items-center gap-2">
      <div class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse"></div>
      &copy; 2025 HIS Malawi
    </span>
  </footer>

  <!-- Sidebar toggle script stays the same -->
  <script>
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');
    const sidebarTexts = document.querySelectorAll('.sidebar-text');
    
    let isCollapsed = true; // ðŸ‘ˆ Start collapsed

    hamburgerBtn.addEventListener('click', () => {
      isCollapsed = !isCollapsed;
      
      if (isCollapsed) {
        sidebar.classList.remove('w-64');
        sidebar.classList.add('w-16');
        mainContent.classList.remove('ml-64');
        mainContent.classList.add('ml-16');
        document.body.classList.add('sidebar-collapsed');
        sidebarTexts.forEach(el => el.classList.add('hidden'));
      } else {
        sidebar.classList.remove('w-16');
        sidebar.classList.add('w-64');
        mainContent.classList.remove('ml-16');
        mainContent.classList.add('ml-64');
        document.body.classList.remove('sidebar-collapsed');
        sidebarTexts.forEach(el => el.classList.remove('hidden'));
      }
    });
  </script>

</body>
</html>